<MudPaper Outlined="true" Class="mb-4">
    <MudGrid>
        <MudItem xs="3">
            @if (IsDone)
            {
                <MudIcon Icon="@Icons.Filled.CheckCircle" 
                         Style="font-size: 6rem"
                         Class="ma-3"
                         Color="Color.Success" 
                />
            }
            else
            {
                <MudText Typo="Typo.h1" Align="Align.Center">@Step</MudText>
            }
        </MudItem>
        <MudItem xs="9">
            @ChildContent
        </MudItem>
    </MudGrid>
</MudPaper>


@code {
    [Parameter]
    public string Step { get; set; }

    [Parameter]
    public bool IsDone { get; set; } = false;
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}