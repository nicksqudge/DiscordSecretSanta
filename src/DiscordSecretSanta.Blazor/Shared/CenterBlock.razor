<Card Background="Background.Dark" Margin="Margin.Is4.FromBottom">
    <CardBody>
        @if (!string.IsNullOrWhiteSpace(Title))
        {
            <Header
                Alignment="TextAlignment.Center"
                HeadingType="Header.HeaderType.MainHeader"
                Class="mb-3"
            >
                @Title
            </Header>
        }
        
        @ChildContent
    </CardBody>
</Card>

    @code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

    [Parameter]
    public string Title { get; set; }
}