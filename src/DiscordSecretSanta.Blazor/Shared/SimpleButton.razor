<Button
    Clicked="@Clicked"
    Color="@Color"
    Size="Size.Small"
    Disabled="@(!IsEnabled)"
>
    @ChildContent
</Button>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;
    
    [Parameter]
    public EventCallback Clicked { get; set; }

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public bool IsEnabled { get; set; } = true;

}