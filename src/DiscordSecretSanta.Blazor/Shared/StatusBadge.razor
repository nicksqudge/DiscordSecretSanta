@inject IStringLocalizer<SharedResources> Translate

@if (Large == false)
{
    <Badge Color="@StatusHelper.GetColourForStatus(Status)">@Translate.GetShortText(Status)</Badge>
}
else
{
    <Alert Color="@StatusHelper.GetColourForStatus(Status)" Visible>
        <AlertMessage>@LongText</AlertMessage>
    </Alert>
}

@code {
    [Parameter]
    public SecretSantaStatus? Status { get; set; }

    [Parameter]
    public bool Large { get; set; } = false;

    string LongText => Status switch
    {
        SecretSantaStatus.Unassigned => Translate["Secret Santa's have not been rolled yet, you shouldn't see this"],
        SecretSantaStatus.Arrived => Translate["You have received your Secret Santa Gift"],
        SecretSantaStatus.Assigned => Translate["Someone has been selected "],
        SecretSantaStatus.Posted => Translate["Your gift is on the way"],
        _ => Translate["No status set"]
    };
}